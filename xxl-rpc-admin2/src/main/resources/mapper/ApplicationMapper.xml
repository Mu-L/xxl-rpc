<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xxl.rpc.admin.mapper.ApplicationMapper">

    <resultMap id="Application" type="com.xxl.rpc.admin.model.entity.Application" >
        <result column="id" property="id" />
        <result column="appname" property="appname" />
        <result column="name" property="name" />
        <result column="desc" property="desc" />
        <result column="access_token" property="accessToken" />
        <result column="add_time" property="addTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <sql id="Base_Column_List">
        t.`id`,
        t.`appname`,
        t.`name`,
        t.`desc`,
        t.`access_token`,
        t.`add_time`,
        t.`update_time`
    </sql>

    <insert id="insert" parameterType="java.util.Map" >
        INSERT INTO xxl_rpc_application (
            `appname`,
            `name`,
            `desc`,
            `access_token`,
            `add_time`,
            `update_time`
        )
        VALUES(
                  #{application.appname} ,
                  #{application.name} ,
                  #{application.desc} ,
                  #{application.accessToken} ,
                  NOW() ,
                  NOW()
              )
    </insert>

    <delete id="delete" parameterType="java.util.Map" >
        DELETE FROM xxl_rpc_application
        WHERE `id` in
        <foreach collection="ids" item="item" open="(" close=")" separator="," >
            #{item}
        </foreach>
    </delete>

    <update id="update" parameterType="java.util.Map" >
        UPDATE xxl_rpc_application
        SET
            `name` = #{application.name},
            `desc` = #{application.desc},
            `access_token` = #{application.accessToken},
            `update_time` = NOW()
        WHERE `id` = #{application.id}
    </update>

    <select id="load" parameterType="java.util.Map" resultMap="Application">
        SELECT <include refid="Base_Column_List" />
        FROM xxl_rpc_application AS t
        WHERE t.`id` = #{id}
    </select>

    <select id="loadByAppName" parameterType="java.util.Map" resultMap="Application">
        SELECT <include refid="Base_Column_List" />
        FROM xxl_rpc_application AS t
        WHERE t.`appname` = #{appname}
    </select>

    <select id="pageList" parameterType="java.util.Map" resultMap="Application">
        SELECT <include refid="Base_Column_List" />
        FROM xxl_rpc_application AS t
        LIMIT #{offset}, #{pagesize}
    </select>

    <select id="pageListCount" parameterType="java.util.Map" resultType="int">
        SELECT count(1)
        FROM xxl_rpc_application AS t
    </select>

    <select id="findAll" parameterType="java.util.Map" resultMap="Application">
        SELECT <include refid="Base_Column_List" />
        FROM xxl_rpc_application AS t
    </select>

</mapper>
